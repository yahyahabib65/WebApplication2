@model IEnumerable<WebApplication2.Models.SalesReportViewModel>

@{
    ViewData["Title"] = "Sales Report";
}

<h1>Sales Report</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Product Name</th>
            <th>Payment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Name</td>
                <td>@item.Payment.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
