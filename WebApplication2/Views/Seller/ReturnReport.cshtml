@model IEnumerable<WebApplication2.Models.Return>

@{
    ViewData["Title"] = "Return Report";
}

<h1>Return Report</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Return Date</th>
            <th>Reason</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.Order.Customer.UserName</td>
                <td>@item.ReturnDate.ToShortDateString()</td>
                <td>@item.Reason</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>
