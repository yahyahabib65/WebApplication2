@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Seller Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@ViewBag.StoreName - Products</h1>
    <a asp-action="AddProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Add New Product
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover datatable" style="width:100%">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px;" alt="@product.Name">
                            }
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm" title="Edit"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-info btn-sm" title="Details"><i class="bi bi-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm" title="Delete"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
