@model IEnumerable<WebApplication2.Models.Store>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Store Management</h1>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover datatable" style="width:100%">
            <thead>
                <tr>
                    <th>Store Name</th>
                    <th>Owner</th>
                    <th>Status</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Owner.Email</td>
                        <td>
                            <span class="badge bg-@((item.Status == WebApplication2.Models.StoreStatus.Approved) ? "success" : (item.Status == WebApplication2.Models.StoreStatus.Pending) ? "warning" : "danger")">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.PaymentStatus</td>
                        <td>
                            @if (item.PaymentStatus == WebApplication2.Models.PaymentStatus.PendingVerification)
                            {
                                @if (!string.IsNullOrEmpty(item.PaymentProofPath))
                                {
                                    <a href="@item.PaymentProofPath" class="btn btn-outline-info btn-sm" target="_blank" title="View Proof"><i class="bi bi-eye"></i></a>
                                }
                                <form asp-action="ApprovePayment" method="post" class="d-inline">
                                    <input type="hidden" name="storeId" value="@item.Id" />
                                    <button type="submit" class="btn btn-success btn-sm" title="Approve"><i class="bi bi-check-lg"></i></button>
                                </form>
                                <form asp-action="RejectPayment" method="post" class="d-inline">
                                    <input type="hidden" name="storeId" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" title="Reject"><i class="bi bi-x-lg"></i></button>
                                </form>
                            }
                            @if (item.Status == WebApplication2.Models.StoreStatus.Approved)
                            {
                                <form asp-action="DisableStore" method="post" class="d-inline">
                                    <input type="hidden" name="storeId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm" title="Disable Store"><i class="bi bi-slash-circle"></i></button>
                                </form>
                            }
                            @if (item.Status == WebApplication2.Models.StoreStatus.Rejected)
                            {
                                <form asp-action="EnableStore" method="post" class="d-inline">
                                    <input type="hidden" name="storeId" value="@item.Id" />
                                    <button type="submit" class="btn btn-info btn-sm" title="Re-enable Store"><i class="bi bi-arrow-clockwise"></i></button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
