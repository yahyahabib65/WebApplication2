<aside class="sidebar">
    <div class="sidebar-header">
        <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="bi bi-shop"></i>
            <span>SellEase</span>
        </a>
    </div>
    <ul class="sidebar-nav">
        <li class="sidebar-item">
            <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door"></i>
                <span class="link-text">Home</span>
            </a>
        </li>

        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Admin"))
            {
                <li class="sidebar-header-text">Admin</li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span class="link-text">Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="SalesReport">
                        <i class="bi bi-bar-chart-line"></i>
                        <span class="link-text">Sales Report</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="VendorRatings">
                        <i class="bi bi-star"></i>
                        <span class="link-text">Vendor Ratings</span>
                    </a>
                </li>
            }
            if (User.IsInRole("Seller"))
            {
                <li class="sidebar-header-text">Seller</li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Seller" asp-action="Index">
                        <i class="bi bi-grid"></i>
                        <span class="link-text">Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Seller" asp-action="Reporting">
                        <i class="bi bi-file-earmark-text"></i>
                        <span class="link-text">Reporting</span>
                    </a>
                </li>
            }
        }
    </ul>
</aside>
