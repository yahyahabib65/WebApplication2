@model WebApplication2.Models.ShopIndexViewModel

@{
    ViewData["Title"] = "Welcome to SellEase";
}

<div class="container mt-4">
    <div class="row">
        <!-- Category Sidebar -->
        <div class="col-lg-3">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header">
                    <h4>Categories</h4>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["categoryId"] == null ? "active" : "")">All Products</a>
                    @foreach (var category in Model.Categories)
                    {
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["categoryId"]?.ToString() == category.Id.ToString() ? "active" : "")">@category.Name</a>
                    }
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <div class="row mb-4">
                <div class="col">
                    <form asp-controller="Home" asp-action="Index" method="get" class="d-flex">
                        <input type="text" name="searchString" class="form-control form-control-lg me-2" placeholder="Search for products, brands and more...">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100 product-card">
                            <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.Id">
                                <img src="@(product.ImageUrl ?? "/images/placeholder.png")" class="card-img-top" alt="@product.Name">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted small">Sold by: @product.Store.Name</p>
                                <p class="card-text fs-5 fw-bold mt-auto">@product.Price.ToString("C")</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-cart-plus me-1"></i> Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
